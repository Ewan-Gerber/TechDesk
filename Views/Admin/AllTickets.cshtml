@model TechDesk.ViewModels.AdminTicketsViewModel

@{
    ViewData["Title"] = "All Tickets";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-4">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-4">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stat Cards -->
<div class="row g-3 mb-4">
    <div class="col-md">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-number">@Model.TotalTickets</div>
                    <div class="stat-label">Total</div>
                </div>
                <div class="stat-icon" style="background:rgba(88,166,255,0.1); color:#58a6ff;">
                    <i class="bi bi-ticket-perforated"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-number">@Model.OpenTickets</div>
                    <div class="stat-label">Open</div>
                </div>
                <div class="stat-icon" style="background:rgba(56,139,253,0.1); color:#388bfd;">
                    <i class="bi bi-circle"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-number">@Model.InProgressTickets</div>
                    <div class="stat-label">In Progress</div>
                </div>
                <div class="stat-icon" style="background:rgba(210,153,34,0.1); color:#d29922;">
                    <i class="bi bi-arrow-repeat"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-number">@Model.CompletedTickets</div>
                    <div class="stat-label">Completed</div>
                </div>
                <div class="stat-icon" style="background:rgba(63,185,80,0.1); color:#3fb950;">
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-number">@Model.ClosedTickets</div>
                    <div class="stat-label">Closed</div>
                </div>
                <div class="stat-icon" style="background:rgba(139,148,158,0.1); color:#8b949e;">
                    <i class="bi bi-x-circle"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters and Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-funnel me-2"></i>Filter Tickets</span>
    </div>
    <div class="card-body p-3">
        <form method="get" asp-action="AllTickets" class="row g-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select name="statusFilter" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="Open" selected="@(Model.StatusFilter == "Open")">Open</option>
                    <option value="InProgress" selected="@(Model.StatusFilter == "InProgress")">In Progress</option>
                    <option value="Completed" selected="@(Model.StatusFilter == "Completed")">Completed</option>
                    <option value="Closed" selected="@(Model.StatusFilter == "Closed")">Closed</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Priority</label>
                <select name="priorityFilter" class="form-select">
                    <option value="">All Priorities</option>
                    <option value="Low" selected="@(Model.PriorityFilter == "Low")">Low</option>
                    <option value="Medium" selected="@(Model.PriorityFilter == "Medium")">Medium</option>
                    <option value="High" selected="@(Model.PriorityFilter == "High")">High</option>
                    <option value="Critical" selected="@(Model.PriorityFilter == "Critical")">Critical</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">User</label>
                <select name="userFilter" class="form-select">
                    <option value="">All Users</option>
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.Id"
                                selected="@(Model.UserFilter == user.Id)">
                            @user.FullName
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Filter
                </button>
                <a href="/Admin/AllTickets" class="btn btn-sm"
                   style="background:#21262d; color:#e6edf3; border:1px solid #30363d; border-radius:8px; padding:8px 16px;">
                    Clear
                </a>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        @if (Model.Tickets.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Submitted By</th>
                        <th>Category</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Update Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model.Tickets)
                    {
                        <tr>
                            <td style="color:#8b949e;">#@ticket.Id</td>
                            <td>@ticket.Title</td>
                            <td>
                                <div style="font-size:13px;">
                                    @ticket.User?.FirstName @ticket.User?.LastName
                                </div>
                                <div style="color:#8b949e; font-size:11px;">
                                    @ticket.User?.Department
                                </div>
                            </td>
                            <td style="color:#8b949e;">@ticket.Category?.Name</td>
                            <td>
                                <span class="badge rounded-pill badge-@ticket.Priority.ToString().ToLower()">
                                    @ticket.Priority
                                </span>
                            </td>
                            <td>
                                <span class="badge rounded-pill badge-@ticket.Status.ToString().ToLower()">
                                    @ticket.Status
                                </span>
                            </td>
                            <td style="color:#8b949e; font-size:13px;">
                                @ticket.CreatedAt.ToString("dd MMM yyyy")
                            </td>
                            <td>
                                <form asp-action="UpdateStatus" method="post" class="d-flex gap-1">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="ticketId" value="@ticket.Id" />
                                    <select name="status" class="form-select form-select-sm"
                                            style="width:130px; background:#21262d; color:#e6edf3; border-color:#30363d;">
                                        <option value="Open" selected="@(ticket.Status == TicketStatus.Open)">Open</option>
                                        <option value="InProgress" selected="@(ticket.Status == TicketStatus.InProgress)">In Progress</option>
                                        <option value="Completed" selected="@(ticket.Status == TicketStatus.Completed)">Completed</option>
                                        <option value="Closed" selected="@(ticket.Status == TicketStatus.Closed)">Closed</option>
                                    </select>
                                    <button type="submit" class="btn btn-sm"
                                            style="background:#21262d; color:#e6edf3; border:1px solid #30363d; border-radius:6px;">
                                        <i class="bi bi-check"></i>
                                    </button>
                                </form>
                            </td>
                            <td>
                                <a href="/Ticket/Details/@ticket.Id"
                                   class="btn btn-sm"
                                   style="background:#21262d; color:#e6edf3; border:1px solid #30363d; border-radius:6px;">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-ticket-perforated" style="font-size:48px; color:#30363d;"></i>
                <p style="color:#8b949e; margin-top:16px;">No tickets found.</p>
            </div>
        }
    </div>
</div>