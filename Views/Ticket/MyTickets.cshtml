@model List<TechDesk.Models.Ticket>

@{
    ViewData["Title"] = "My Tickets";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-ticket-perforated me-2"></i>My Tickets</span>
        <a href="/Ticket/Create" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-lg me-1"></i> New Ticket
        </a>
    </div>

    <div class="table-responsive">
        @if (Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model)
                    {
                        <tr>
                            <td style="color: #8b949e;">#@ticket.Id</td>
                            <td>@ticket.Title</td>
                            <td style="color: #8b949e;">@ticket.Category?.Name</td>
                            <td>
                                <span class="badge rounded-pill badge-@ticket.Priority.ToString().ToLower()">
                                    @ticket.Priority
                                </span>
                            </td>
                            <td>
                                <span class="badge rounded-pill badge-@ticket.Status.ToString().ToLower()">
                                    @ticket.Status
                                </span>
                            </td>
                            <td style="color: #8b949e; font-size: 13px;">
                                @ticket.CreatedAt.ToString("dd MMM yyyy")
                            </td>
                            <td>
                                <a href="/Ticket/Details/@ticket.Id"
                                   class="btn btn-sm"
                                   style="background:#21262d; color:#e6edf3; border:1px solid #30363d; border-radius:6px;">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-ticket-perforated" style="font-size: 48px; color: #30363d;"></i>
                <p style="color: #8b949e; margin-top: 16px;">You haven't submitted any tickets yet.</p>
                <a href="/Ticket/Create" class="btn btn-primary btn-sm">Submit your first ticket</a>
            </div>
        }
    </div>
</div>