<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – TechDesk</title>

    <!-- Bootstrap CSS - gives us all the grid and component styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons - a free icon library that works great with Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

    <style>
        /* === GLOBAL STYLES === */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #0d1117;
            color: #e6edf3;
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
        }

        /* === SIDEBAR NAVIGATION === */
        /* The sidebar is the vertical menu on the left side */
        .sidebar {
            position: fixed; /* stays in place when you scroll */
            top: 0;
            left: 0;
            height: 100vh; /* full screen height */
            width: 260px;
            background-color: #161b22;
            border-right: 1px solid #30363d;
            display: flex;
            flex-direction: column;
            z-index: 1000; /* sits on top of other elements */
            transition: all 0.3s ease;
        }

        /* The TechDesk logo area at the top of the sidebar */
        .sidebar-brand {
            padding: 24px 20px;
            border-bottom: 1px solid #30363d;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .sidebar-brand .brand-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #e94560, #0f3460);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            flex-shrink: 0;
        }

        .sidebar-brand .brand-name {
            font-size: 20px;
            font-weight: 700;
            color: #ffffff;
            letter-spacing: -0.5px;
        }

        .sidebar-brand .brand-subtitle {
            font-size: 11px;
            color: #8b949e;
            margin-top: 1px;
        }

        /* Navigation links container */
        .sidebar-nav {
            padding: 16px 12px;
            flex: 1; /* takes up remaining space */
        }

        /* Section labels like "MAIN MENU" and "ADMIN" */
        .nav-section-label {
            font-size: 10px;
            font-weight: 600;
            color: #8b949e;
            letter-spacing: 1px;
            text-transform: uppercase;
            padding: 8px 12px 4px;
            margin-top: 8px;
        }

        /* Individual nav link styling */
        .nav-link {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            border-radius: 8px;
            color: #8b949e;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.2s ease;
            margin-bottom: 2px;
        }

        /* When you hover over a nav link */
        .nav-link:hover {
            background-color: #21262d;
            color: #e6edf3;
        }

        /* The currently active page link */
        .nav-link.active {
            background-color: rgba(233, 69, 96, 0.15);
            color: #e94560;
        }

        .nav-link i {
            font-size: 16px;
            width: 20px;
            text-align: center;
        }

        /* User profile section at the bottom of sidebar */
        .sidebar-footer {
            padding: 16px;
            border-top: 1px solid #30363d;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
            border-radius: 8px;
            background-color: #21262d;
            margin-bottom: 8px;
        }

        /* The circle avatar with user initials */
        .user-avatar {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, #e94560, #0f3460);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 13px;
            font-weight: 700;
            color: white;
            flex-shrink: 0;
        }

        .user-name {
            font-size: 13px;
            font-weight: 600;
            color: #e6edf3;
        }

        .user-role {
            font-size: 11px;
            color: #8b949e;
        }

        /* Logout button */
        .btn-logout {
            width: 100%;
            background-color: transparent;
            border: 1px solid #30363d;
            border-radius: 8px;
            color: #8b949e;
            padding: 8px;
            font-size: 13px;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-logout:hover {
            background-color: rgba(233, 69, 96, 0.1);
            border-color: #e94560;
            color: #e94560;
        }

        /* === MAIN CONTENT AREA === */
        /* This is everything to the right of the sidebar */
        .main-content {
            margin-left: 260px; /* push content right to make room for sidebar */
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Top bar that runs across the top of the content area */
        .topbar {
            background-color: #161b22;
            border-bottom: 1px solid #30363d;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky; /* sticks to top when scrolling */
            top: 0;
            z-index: 999;
        }

        .topbar-title {
            font-size: 18px;
            font-weight: 600;
            color: #e6edf3;
        }

        .topbar-subtitle {
            font-size: 12px;
            color: #8b949e;
            margin-top: 2px;
        }

        /* The area where each page's content renders */
        .content-area {
            padding: 24px;
            flex: 1;
        }

        /* === BADGE STYLES === */
        /* Small coloured labels used for status and priority */
        .badge-open { background-color: rgba(56, 139, 253, 0.15); color: #58a6ff; }
        .badge-inprogress { background-color: rgba(210, 153, 34, 0.15); color: #d29922; }
        .badge-resolved { background-color: rgba(63, 185, 80, 0.15); color: #3fb950; }
        .badge-closed { background-color: rgba(139, 148, 158, 0.15); color: #8b949e; }
        .badge-low { background-color: rgba(63, 185, 80, 0.15); color: #3fb950; }
        .badge-medium { background-color: rgba(210, 153, 34, 0.15); color: #d29922; }
        .badge-high { background-color: rgba(248, 81, 73, 0.15); color: #f85149; }
        .badge-critical { background-color: rgba(188, 15, 15, 0.2); color: #ff4444; }

        /* === CARD STYLES === */
        /* Cards are the white/dark boxes that contain content */
        .card {
            background-color: #161b22;
            border: 1px solid #30363d;
            border-radius: 12px;
        }

        .card-header {
            background-color: transparent;
            border-bottom: 1px solid #30363d;
            padding: 16px 20px;
            font-weight: 600;
            color: #e6edf3;
        }

        /* === STAT CARDS === */
        /* The summary boxes at the top of the dashboard */
        .stat-card {
            background-color: #161b22;
            border: 1px solid #30363d;
            border-radius: 12px;
            padding: 20px;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }

        .stat-number {
            font-size: 32px;
            font-weight: 700;
            color: #e6edf3;
            line-height: 1;
            margin-bottom: 4px;
        }

        .stat-label {
            font-size: 13px;
            color: #8b949e;
        }

        .stat-icon {
            width: 44px;
            height: 44px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        /* === TABLE STYLES === */
        .table {
            color: #e6edf3;
            margin-bottom: 0;
        }

        .table th {
            background-color: #21262d;
            color: #8b949e;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-color: #30363d;
            padding: 12px 16px;
        }

        .table td {
            border-color: #30363d;
            padding: 14px 16px;
            vertical-align: middle;
            font-size: 14px;
        }

        .table tbody tr:hover {
            background-color: #21262d;
        }

        /* === BUTTON STYLES === */
        .btn-primary {
            background: linear-gradient(135deg, #e94560, #c62a47);
            border: none;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s;
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(233, 69, 96, 0.4);
            background: linear-gradient(135deg, #e94560, #c62a47);
        }

        /* === FORM STYLES === */
        .form-control, .form-select {
            background-color: #21262d;
            border: 1px solid #30363d;
            border-radius: 8px;
            color: #e6edf3;
            padding: 10px 14px;
        }

        .form-control:focus, .form-select:focus {
            background-color: #21262d;
            border-color: #e94560;
            box-shadow: 0 0 0 3px rgba(233, 69, 96, 0.2);
            color: #e6edf3;
        }

        .form-label {
            font-size: 13px;
            font-weight: 500;
            color: #8b949e;
            margin-bottom: 6px;
        }

        /* === ALERT STYLES === */
        .alert-success {
            background-color: rgba(63, 185, 80, 0.1);
            border-color: rgba(63, 185, 80, 0.3);
            color: #3fb950;
            border-radius: 8px;
        }

        .alert-danger {
            background-color: rgba(248, 81, 73, 0.1);
            border-color: rgba(248, 81, 73, 0.3);
            color: #f85149;
            border-radius: 8px;
        }
    </style>
</head>
<body>

    @* Only show the sidebar if the user is logged in *@
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="sidebar">
            <!-- Brand / Logo at top of sidebar -->
            <div class="sidebar-brand">
                <div class="brand-icon">🎫</div>
                <div>
                    <div class="brand-name">TechDesk</div>
                    <div class="brand-subtitle">IT Helpdesk System</div>
                </div>
            </div>

            <!-- Navigation Links -->
            <nav class="sidebar-nav">
                <div class="nav-section-label">Main Menu</div>

                <a href="/Home/Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <a href="/Ticket/MyTickets" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "MyTickets" ? "active" : "")">
                    <i class="bi bi-ticket-perforated"></i> My Tickets
                </a>

                <a href="/Ticket/Create" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active" : "")">
                    <i class="bi bi-plus-circle"></i> New Ticket
                </a>

                @* Only show Admin section if the logged in user has the Admin role *@
                @if (User.IsInRole("Admin"))
                {
                    <div class="nav-section-label">Admin</div>

                    <a href="/Admin/AllTickets" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "AllTickets" ? "active" : "")">
                        <i class="bi bi-grid-3x3-gap"></i> All Tickets
                    </a>

                    <a href="/Admin/Users" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")">
                        <i class="bi bi-people"></i> Manage Users
                    </a>
                }
            </nav>

            <!-- User info and logout at bottom of sidebar -->
            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        @* Show first letter of their first name as avatar *@
                        @User.Identity.Name?.Substring(0, 1).ToUpper()
                    </div>
                    <div>
                        <div class="user-name">@User.Identity.Name</div>
                        <div class="user-role">
                            @if (User.IsInRole("Admin"))
                            {
                                <span style="color: #e94560;">Administrator</span>
                            }
                            else
                            {
                                <span>User</span>
                            }
                        </div>
                    </div>
                </div>

                @* Logout is a POST form for security reasons *@
                <form asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-logout">
                        <i class="bi bi-box-arrow-right"></i> Sign Out
                    </button>
                </form>
            </div>
        </div>

        <!-- Main content area to the right of sidebar -->
        <div class="main-content">
            <div class="topbar">
                <div>
                    <div class="topbar-title">@ViewData["Title"]</div>
                    <div class="topbar-subtitle">TechDesk IT Helpdesk</div>
                </div>
            </div>
            <div class="content-area">
                @* This is where each page's content gets injected *@
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        @* If not logged in just render the page with no sidebar *@
        @RenderBody()
    }

    <!-- Bootstrap JS - needed for dropdowns, modals etc -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @* This renders any extra scripts that individual pages need *@
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>